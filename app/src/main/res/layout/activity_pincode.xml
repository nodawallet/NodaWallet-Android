                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/textpasscode"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                    <com.application.nodawallet.utils.CustomTextViewNormal

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="GHI"
                        android:textColor="@color/textpasscode"
                        android:letterSpacing="0.1"
                        android:textSize="9sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/t5"
                    android:gravity="center"
                    android:foreground="@drawable/numberbackground"
                    android:orientation="vertical"
                    android:background="@drawable/button_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/t6"
                    app:layout_constraintStart_toEndOf="@+id/t4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.529"
                    >
                    <com.application.nodawallet.utils.CustomTextViewLight
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/textpasscode"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                    <com.application.nodawallet.utils.CustomTextViewNormal

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/textpasscode"
                        android:text="JKL"
                        android:letterSpacing="0.1"
                        android:textSize="9sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/t6"
                    android:gravity="center"
                    android:foreground="@drawable/numberbackground"
                    android:orientation="vertical"
                    android:background="@drawable/button_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/t5"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <com.application.nodawallet.utils.CustomTextViewLight
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="6"
                        android:textSize="25sp"
                        android:textColor="@color/textpasscode"
                        android:textStyle="bold" />
                    <com.application.nodawallet.utils.CustomTextViewNormal

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/textpasscode"
                        android:text="MNO"
                        android:letterSpacing="0.1"
                        android:textSize="9sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout10">

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/t7"
                    android:gravity="center"
                    android:foreground="@drawable/numberbackground"
                    android:orientation="vertical"
                    android:background="@drawable/button_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/t8"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <com.application.nodawallet.utils.CustomTextViewLight
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/textpasscode"
                        android:text="7"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                    <com.application.nodawallet.utils.CustomTextViewNormal

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/textpasscode"
                        android:text="PQRS"
                        android:letterSpacing="0.1"
                        android:textSize="9sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/t8"
                    android:gravity="center"
                    android:foreground="@drawable/numberbackground"
                    android:orientation="vertical"
                    android:background="@drawable/button_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/t9"
                    app:layout_constraintStart_toEndOf="@+id/t7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.529"
                    >
                    <com.application.nodawallet.utils.CustomTextViewLight
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="8"
                        android:textSize="25sp"
                        android:textColor="@color/textpasscode"
                        android:textStyle="bold" />
                    <com.application.nodawallet.utils.CustomTextViewNormal

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/textpasscode"
                        android:text="TUV"
                        android:letterSpacing="0.1"
                        android:textSize="9sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/t9"
                    android:gravity="center"
                    android:foreground="@drawable/numberbackground"
                    android:orientation="vertical"
                    android:background="@drawable/button_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/t8"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <com.application.nodawallet.utils.CustomTextViewLight
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@color/textpasscode"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                    <com.application.nodawallet.utils.CustomTextViewNormal

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="WXYZ"
                        android:textColor="@color/textpasscode"
                        android:letterSpacing="0.1"
                        android:textSize="9sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="@dimen/_25sdp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout11">

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/textView161"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:foreground="@drawable/numberbackground"
                    android:orientation="vertical"
                    android:background="@drawable/button_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/t0"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    >
                    <com.application.nodawallet.utils.CustomTextViewLight
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/textpasscode"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/t0"
                    android:gravity="center"
                    android:foreground="@drawable/numberbackground"
                    android:orientation="vertical"
                    android:background="@drawable/button_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/clearImg1"
                    app:layout_constraintStart_toEndOf="@+id/textView161"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    >
                    <com.application.nodawallet.utils.CustomTextViewLight
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/textpasscode"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/clearImg1"
                    android:gravity="center"
                    android:foreground="@drawable/numberbackground"
                    android:orientation="vertical"
                    android:background="@drawable/button_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/t0"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:tint="@color/textpasscode"
                        android:src="@drawable/ic_backspace"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </LinearLayout>


